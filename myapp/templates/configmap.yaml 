apiVersion: v1
kind: ConfigMap
metadata:
  name: {{ include "myapp.fullname" . }}   # Correctly appending "-html" to the fullname
  namespace: {{ .Values.namespace }}
data:
  index.html: |
    <!DOCTYPE html>
    <html>
    <head>
      <title>{{ .Values.env | title }} Environment</title>
    </head>
    <body>
      <h1>Hello from the {{ .Values.env }} environment!</h1>
    </body>
    </html>
