apiVersion: v1
kind: ConfigMap
metadata:
  name: {{ include "myapp.fullname" . | cat "-html" }}    # Corrected name with "-html" appended
  namespace: {{ .Values.namespace }}
data:
  index.html: |
    <!DOCTYPE html>
    <html>
    <head>
      <title>{{ .Values.env | title }} Environment</title>
    </head>
    <body>
      <h1>Hello from the {{ .Values.env }} environment!</h1>
    </body>
    </html>
